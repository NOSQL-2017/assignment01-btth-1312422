<div class="row" style="padding-top: 10px;">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <table class="table table-hover">
      <thead>
        <tr class="bg-primary">
          <th><center>ID</center></th>
          <th><center>BUYER</center></th>
          <th><center>QUATITY</center></th>
          <th><center>ORDER DATE</center></th>
          <th><center>DELIVERY DATE</center></th>
          <th><center>FINISH</center></th>
        </tr>
      </thead>
      <tbody>
          <%@purchase_orders.each do |order| %>
          <tr>
            <th scope="row">1</th>
            <td><%=User.find(order.buyer).username%></td>
            <td><%=order.total%></td>
            <td><%=order.created_at.strftime('%-b %-d, %Y')%></td>
            <td></td>
            <% if order.status == false%>
            <td><center><%= link_to 'Update', order, :action => :update, method: :put, class: 'btn btn-danger', style: 'padding: 2px 10px;'%></center></td>
            <%end%>
          </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</div>