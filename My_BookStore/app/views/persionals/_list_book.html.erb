<%if User.find(session[:current_user_id]).kind_of_user == 1%>
<%= link_to 'New book', new_book_path, :class => 'btn btn-primary', :style => "margin-bottom: 16px;" %>
<%end%>
<div class="row">
	<% @books.each do |book|%>
	<div class="col-sm-3 col-lg-3 col-md-3">
		<div class="thumbnail">
			<img src="<%= book.image_info %>" alt="" class="img-thumbnail" style="width:100%; height: 200px">
			<div class="caption">
				<h4 class="pull-right"><%=book.price%>Ä‘</h4>
				<h4><%=book.name%></h4>
				<h4><textarea rows="1" disabled="disabled"><%=book.infomation%></textarea></h4>
				<h5 class="text-muted"><%=book.display_created_at%></h5>
			</div>
			<div class="ratings">
				<%= link_to 'More info', book, class: 'pull-right'%>
				<% @bookInfo = bookInfo.find_by(book_id: book.id)%>
				<p>
					<%(1..5).each do |i|%>
					<%if i <= @book.star%>
					<span class="glyphicon glyphicon-star"></span>
					<%else%>
					<span class="glyphicon glyphicon-star-empty"></span>
					<%end%>
					<%end%>
				</p>
			</div>
			<div>
				<%= link_to 'Delete', book, method: :delete, data: { confirm: 'Do you want destroy?' }, class: 'btn btn-danger', style: 'padding: 2px 10px;'%>
				<%= link_to 'Edit', edit_book_path(book), class: 'btn btn-default', style: 'padding: 2px 10px;'%>
			</div>
		</div>
	</div>
	<%end%>
</div>
<center><%= will_paginate @books %></center>