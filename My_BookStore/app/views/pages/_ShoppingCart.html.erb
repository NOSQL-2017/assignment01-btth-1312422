<script>
    // Định nghĩa một mảng các phần tử sẽ bỏ vào giỏ hàng
    var shoppingCartItems = [];

    $(document).ready(function () {
        // Kiểm tra nếu đã có sessionStorage["shopping-cart-items"] hay chưa?
        if (sessionStorage["shopping-cart-items"] != null) {
            shoppingCartItems = JSON.parse(sessionStorage["shopping-cart-items"].toString());
        }
        // Hiển thị thông tin từ giỏ hàng
    });


    // Sự kiện click các button có class=".add-to-cart"
    $(".add-to-cart").click(function () {
        <% if type == 'home' %>
            var button = $(this); // Lấy đối tượng button mà người dùng click
            var id = button.parent().parent().parent().attr("id"); // id của sản phẩm là id của button
            var name = button.parent().parent().children().eq(1).children().eq(1).text();// name của sản phẩm là thuộc tính data-name của button
            var price = $("#price_" + id.split("_")[1]).text(); // price của sản phẩm là thuộc tính data-price của button
            var quantity = 1; // Số lượng
            var image = $("#img_" + id.split("_")[1]).attr("src");
            var item = {
                id: id.split("_")[1],
                name: name,
                price: parseInt(price, 10),
                quantity: quantity,
                image: image
            };
            console.log(item);
        <% end %>
        <% if type == 'infoProduce' %>
            var item = {
                id: <%= @food.id %>,
                name: '<%= @food.name %>',
                price: <%= @food.price %>,
                quantity: 1,
                image: '/images/<%= @food.user_id %>/<%= @food.id %>.jpg'
            };
        <% end %>
        var exists = false;
        if (shoppingCartItems.length > 0) {
            $.each(shoppingCartItems, function (index, value) {
                // Nếu mặt hàng đã tồn tại trong giỏ hàng thì chỉ cần tăng số lượng mặt hàng đó trong giỏ hàng.
                if (value.id == item.id) {
                    value.quantity++;
                    exists = true;
                    return false;
                }
            });
        }

        // Nếu mặt hàng chưa tồn tại trong giỏ hàng thì bổ sung vào mảng
        if (!exists) {
            shoppingCartItems.push(item);
        }

        // Lưu thông tin vào sessionStorage
        sessionStorage["shopping-cart-items"] = JSON.stringify(shoppingCartItems); // Chuyển thông tin mảng shoppingCartItems sang JSON trước khi lưu vào sessionStorage
    });

    

</script>
