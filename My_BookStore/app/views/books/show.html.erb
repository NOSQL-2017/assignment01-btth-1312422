 <div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <div class="thumbnail">
      <%= image_tag "/books/#{@book.id}/cover/#{@book.cover_filename}",:class => "img-responsive",:style => "width:100%; height: 300px",:size => "260x180"%>
      <div class="caption-full">
        <h4 class="pull-right"><%=@book.price%>Ä‘</h4>
        <h3><%=@book.name%></h3>
      </div>
      <div style="padding: 9px">
        <p><%=@book.information%></p>
      </div>
      <div class="ratings">
        <p>
          <%(1..5).each do |i|%>
            <%if i <= @book.star%>
            <span class="glyphicon glyphicon-star"></span>
              <%else%>
            <span class="glyphicon glyphicon-star-empty"></span>
            <%end%>
          <%end%>
        </p>
        <%if @book.user_id != session[:current_user_id]%>
        <div>
          <a href="" class="btn btn-primary add-to-cart"><i class="fa fa-shopping-cart"></i>Add to cart</a>
        </div>
        <%else%>
        <div>
          <%= link_to 'Delete', @book, method: :delete, data: { confirm: 'Do you want destroy?' }, class: 'btn btn-primary', style: "margin-bottom: 25px;padding-top: 8px;padding-bottom: 6px;"%>
          <%= link_to 'Edit book', edit_book_path(@book), class: 'btn btn-primary', style: "margin-bottom: 25px;padding-top: 8px;padding-bottom: 6px;"%>
        </div>
        <% end %>
      </div>
    </div>
  </div>
 </div>
 <%= render 'ShoppingCart', type: 'infoProduce' %>